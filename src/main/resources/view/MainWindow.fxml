<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="350.0"
            prefHeight="700.0" prefWidth="450.0"
            styleClass="anchor-pane"
            stylesheets="@../styles/modern.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lebron.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    vvalue="1.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="60.0"
                    fitToWidth="true">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="10.0"
                      fillWidth="true" />
            </content>
        </ScrollPane>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="60.0"
                   promptText="Type your message here..."
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="80.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="60.0"
                prefWidth="80.0"
                text="Send"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.rightAnchor="0.0" />
    </children>
</AnchorPane>

